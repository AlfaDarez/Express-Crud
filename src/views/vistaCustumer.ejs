<% include partials/_header %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-7">
                <table class="table table-hover">
                        <thead class="thead-dark">
                          <tr>
                            <th scope="col">NÂ°</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">actions</th>
                          </tr> 
                        </thead>
                        <tbody>  
                          <% if(data){ %>  
                            <% for (var i = 0; i<data.length; i++){ %>
                              <tr>
                                <td><%= (i+1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].address %></td>
                                <td><%= data[i].phone %></td>
                                <td> 
                                  <a href="/delete/<%= data[i].id %>" class="ml-2"><i class=" fas fa-trash-alt"></i> </a>
                                  <a href="/edit/<%= data[i].id %>" class="ml-2"><i class="far fa-edit"></i> </a>
                                 
                                 </td>
                              </tr>
                            <% } %>
                          <% } %>                     
                         
                        </tbody>
                      </table>

        </div>
        <div class="col-md-5">
           <div class="card">
               <div class="card-body">
                    <form method="post" action="/add">
                
                            <div class="form-group">
                                    <label for="exampleInputEmail1">Nombre Usuario</label>
                                    <input type="text" class="form-control" name="name" placeholder="Ingresa tu Nombre">
                                    
                            </div>
    
                            <div class="form-group">
                                    <label for="exampleInputEmail1">Ciudad</label>
                                    <input type="text" class="form-control"  name="address" placeholder="Ciudad donde Vives">
                                    
                            </div>
    
                            <div class="form-group">
                                    <label for="exampleInputEmail1">Telefono</label>
                                    <input type="text" class="form-control"  name="phone" placeholder="Tu Numero de telefono">
                                    
                            </div>
                    
                            <button type="submit" class="btn btn-primary btn-block">Enviar</button>
                </form>
               </div>

           </div>
        </div>
    </div>
</div>

